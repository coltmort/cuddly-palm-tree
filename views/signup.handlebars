<div class="m-auto w-1/3 mt-10 p-5 border-2 border-solid border-black rounded bg-slate-200">
  <h2 class="text-xl font-bold">Signup</h2>

  <form class="form signup-form flex-col gap-5">
    <div class=" py-3 flex flex-col">
      <label for="username-signup">username</label>
      <input class="form-input" type="text" id="username-signup" />
    </div>
    <div class="flex flex-col">
      <label for="email-signup">email</label>
      <input class="form-input" type="email" id="email-signup" />
    </div>
    <div class="flex flex-col">
      <label for="password-signup">password</label>
      <input class="form-input" type="password" id="password-signup" />
    </div>
    <div class="mt-3">
      <button class="border-2 border-slate-500 rounded-lg p-2 px-5 bg-slate-50" type="submit">Signup</button>
    </div>
  </form>
  <div class="flex justify-between items-center mt-5">
    <label for="login">Already have an account?</label>
    <button id="login" class=" login mr-10 border-2 border-slate-300 rounded-lg p-1 px-3">Login</button>
  </div>

  <script src="/js/signup.js"></script>
</div>