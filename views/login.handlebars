<div class="m-auto w-1/3 mt-10 p-5 border-2 border-solid border-black rounded bg-slate-200">
  <h2 class="text-xl font-bold">Login</h2>

  <form class="form login-form flex-col gap-5">
    <div class=" py-3 flex flex-col">
      <label for="email-login">email</label>
      <input class="form-input" type="text" id="email-login" />
    </div>
    <div class="flex flex-col">
      <label for="password-login">password</label>
      <input class="form-input" type="password" id="password-login" />
    </div>
    <div class="mt-3">
      <button class="border-2 border-slate-500 rounded-lg p-2 px-5 bg-slate-50" type="submit">login</button>
    </div>
  </form>
  <div class="flex justify-between items-center mt-5">
    <label for="signup">Don't have an account?</label>
    <button id="signup" class="mr-10 border-2 border-slate-500 rounded-lg p-2 px-5">Signup</button>
  </div>

  <script src="/js/login.js"></script>
</div>