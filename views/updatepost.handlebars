<div class="flex flex-col items-center p-14">
    <form class="flex flex-col gap-5 w-1/2" >
        <input value="{{post.title}}" class="p-3 text-2xl rounded w-full " type="text" name="title" id="post-title" placeholder="Title for your Post">
        <textarea class="p-3 resize-none text-xl rounded w-full h-64" type="text" name="content" id="post-content" > {{post.post}}</textarea>
        <button data-id="{{post.id}}" type="submit" id="update-post" class="px-4 py-2 text-2xl font-bold rounded-lg bg-sky-500 text-white self-end">Update Post</button>
    </form>
</div>

<script src="/js/updatepost.js"></script>