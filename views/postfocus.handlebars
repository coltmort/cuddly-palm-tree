<article class="mx-auto max-w-prose">
    <div>
        <h2 class="text-3xl py-5 font-black">{{data.post.title}}</h2>
    </div>
    <div class="pb-5">
        <p>{{data.post.user.name}}, <span class="text-sm text-slate-500">{{post.createdAt}}</span></p>
    </div>
    <div class="py-5">
        <p>{{data.post.post}}</p>
    </div>
    <div>
        <hr class="max-w-prose">
        <h3 class="my-5 text-2xl font-bold">Comments</h3>
        <div class="flex gap-3 items-center mb-5">
            <input id="comment-input" type="text" placeholder="Write a comment" class="rounded-lg bg-slate-300 py-1 px-5 w-full">
            <button id="post-comment" class="rounded-full p-1 bg-sky-400 flex justify-center items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="-3 -3 30 30" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
                </svg>
            </button>
        </div>
        <div class="flex flex-col gap-5">
            {{#each data.comments as |comment|}}
                <div id="comment" data-id="{{comment.id}}" class="group relative bg-slate-200 rounded-md py-2 px-4 max-w-max flex flex-col gap-2">
                    <p class="font-semibold">
                        {{comment.user.name}} <span class="font-normal text-slate-500">commented on {{comment.createdAt}}</span>
                    </p>
                    <p>
                        {{comment.comment}}
                    </p>
                    <div id="delete" class="w-4 h-4 absolute -top-2 -right-2 justify-center items-center rounded-full hidden group-hover:flex hover:flex">

                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                            <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
                        </svg>

                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    {{!-- {{data.comments}}
    {{> comments data.comments}} --}}
</article>

<script type="module" src="/js/comment.js"></script>